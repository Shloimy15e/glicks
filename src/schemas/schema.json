{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "categories": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "checked": {
                        "type": "boolean"
                    },
                    "description": {
                        "type": "string"
                    },
                    "imageUrl": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "checked"
                ]
            }
        }
    }
}