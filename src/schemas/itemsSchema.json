{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "items": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "price": {
                        "type": "object",
                        "properties": {
                            "$": {"type": "integer"},
                            "\u20AC": {"type": "number"},
                            "£": {"type": "integer"},
                            "₪": {"type": "integer"}
                        },
                        "required": ["$", "€", "£", "₪"]
                    },
                    "imageSrc": {
                        "type": "string",
                        "format": "custom-uri"
                    },
                    "imageAlt": {
                        "type": "string"
                    },
                    "description": {
                        "type": "object",
                        "properties": {
                            "short_text": {
                                "type": "string"
                            },
                            "text": {
                                "type": "string"
                            },
                            "allergens": {
                                "type": "array"
                            },
                            "categories": {
                                "type": "array"
                            }
                        },
                        "required": ["allergens", "categories"]
                    },
                    "milk": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "price",
                    "imageSrc",
                    "milk",
                    "description"
                ]
            }
        }
    }
}